# MongoDB Configuration
# Required: MongoDB Atlas connection string with retry settings
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority&ssl=true

# Jobber API Configuration
# Required: OAuth credentials for Jobber integration
JOBBER_CLIENT_ID=your-client-id-here
JOBBER_CLIENT_SECRET=your-client-secret-here
JOBBER_ACCESS_TOKEN=your-access-token-here
JOBBER_REFRESH_TOKEN=your-refresh-token-here
JOBBER_REDIRECT_URI=https://your-domain.com/auth/jobber/callback

# Ford Telematics Vehicle VINs
# Required: VINs for all tracked vehicles
LIGHTNING_VIN=your-vin-here
LIGHTNING_PRO_VIN=your-vin-here
LIGHTNING_XLT_VIN=your-vin-here
LIGHTNING_2_VIN=your-vin-here

# Ford Telematics API Configuration
# Required: Ford Pro API OAuth credentials
FORD_TELEMATICS_CLIENT_ID=your-ford-client-id
FORD_TELEMATICS_CLIENT_SECRET=your-ford-client-secret
FORD_TELEMATICS_BASE_URL=https://api.fordpro.com/vehicle-status-api

# Server Configuration
# Required: Port for Express server (default: 3002)
PORT=3002

# Google Maps API Configuration
# Required: API key for geocoding and mapping
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Google OAuth Authentication (Required)
# Required: Google OAuth credentials for @sparklawnnwa.com login
# Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3002/auth/google/callback

# JWT Secret (Required)
# Required: Random secret key for JWT token signing
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production-use-openssl-rand

# Email Whitelist (Optional)
# Optional: Comma-separated list of specific authorized emails
# If not set, any @sparklawnnwa.com email will be allowed
AUTHORIZED_EMAILS=user1@sparklawnnwa.com,user2@sparklawnnwa.com

# Slack Notifications (Optional)
# Optional: Webhook URL for fleet alerts and daily PDF reports
# Get yours at: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#fleet-alerts

# Environment
# Required: production, staging, or development
NODE_ENV=development

# CORS Configuration (Optional)
# Optional: Comma-separated list of allowed origins for production
# Example: https://yourdomain.com,https://app.yourdomain.com
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3002,http://localhost:3003

# Logging
# Optional: log level (error, warn, info, debug)
LOG_LEVEL=info

# API Rate Limiting
# Optional: requests per minute per IP
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# Session/Auth (if applicable)
# Optional: secret for session signing
SESSION_SECRET=your-secure-random-session-secret

# Timezone
# Required: IANA timezone for trip calculations
TZ=America/Chicago
